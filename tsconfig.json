{
  "compilerOptions": {
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "allowJs": true,
    "target": "es2017",
    "module": "commonjs",
    "noEmitOnError": true,
    "outDir": ".build",
    "moduleResolution": "node",
    "lib": ["es2015"],
    "rootDir": "./",
    "baseUrl": ".",
    "paths": {
      "@constants": ["config/constants.ts"],
      "@vars": ["config/vars.ts"],
      "@middlewares/*": ["middlewares/*"],
      "@services/*": ["services/*"]
    },
    "noImplicitAny": true,
    "esModuleInterop": true
  }
}